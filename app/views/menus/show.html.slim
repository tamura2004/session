= panel @menu.name
  = list_group
    - unless @menu.choices
      - @menu.children.each do |child|
        = list_item child.name, child

    - else
      - @menu.choices.each do |choice|
        = list_item choice.name, menu_path(@menu.children.first, form: choice.attributes)
- if @menu.parent
  = list_group
    = list_item @menu.parent.name, @menu.parent